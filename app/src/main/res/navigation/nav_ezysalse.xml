<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_starwars"
    app:startDestination="@id/fragment_splash">


    <fragment
        android:id="@+id/fragment_splash"
        android:name="tkhub.project.ezysales.ui.fragment.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">


        <action
            android:id="@+id/fragment_splash_to_login"
            app:destination="@id/fragment_login"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right" />


        <action
            android:id="@+id/fragment_splash_to_dashboard"
            app:destination="@id/fragment_dashboard"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>


    </fragment>



    <fragment
        android:id="@+id/fragment_login"
        android:name="tkhub.project.ezysales.ui.fragment.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">



    </fragment>


    <fragment
        android:id="@+id/fragment_dashboard"
        android:name="tkhub.project.ezysales.ui.fragment.dashboard.DashBoardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dash_board">

    </fragment>





</navigation>